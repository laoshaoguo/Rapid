<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:background="@drawable/shape_hintview_corner_bg"
              android:gravity="center"
              android:orientation="horizontal">
    <!--信息提示:图片和文字-->
    <!--主要用于收藏/举报/动态发送/内容删除等 操作反馈指示。 文字+图标的展示方式，停留一定时间自动消失-->
    <ImageView
        android:id="@+id/iv_hint_img"
        android:layout_width="@dimen/icon_for_assist_state_small"
        android:layout_height="@dimen/icon_for_assist_state_small"
        android:layout_marginBottom="@dimen/spacing_mid"
        android:layout_marginLeft="@dimen/spacing_large"
        android:layout_marginRight="@dimen/spacing_small"
        android:layout_marginTop="@dimen/spacing_mid"
        tools:src="@mipmap/login_ico_closeye"/>

    <TextView
        android:id="@+id/tv_hint_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/spacing_large"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="@color/important_for_content"
        android:textSize="@dimen/size_icon_assist"
        tools:text="发送失败"/>
</LinearLayout>
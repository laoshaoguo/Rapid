<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/iv_hint_img"
        android:layout_width="@dimen/icon_for_assist_state_small"
        android:layout_height="@dimen/icon_for_assist_state_small"
        android:layout_gravity="center"
        android:src="@mipmap/msg_box_remind"
        android:visibility="invisible"/>


    <TextView
        android:id="@+id/tv_simple_text_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_small_4dp"
        android:gravity="center|left"
        android:includeFontPadding="false"
        android:drawablePadding="@dimen/spacing_small_3dp"
        android:textColor="@color/normal_for_assist_text"
        android:textSize="@dimen/size_content_comment"
        tools:text="哈哈哈哈 很多时光里的角色旅馆开房间"/>


</LinearLayout>

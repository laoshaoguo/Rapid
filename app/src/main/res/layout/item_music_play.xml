<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/fragment_music_paly_img"
        android:layout_width="@dimen/music_play_head"
        android:layout_height="@dimen/music_play_head"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:src="@drawable/shape_default_image"/>

    <ImageView
        android:id="@+id/fragment_music_paly_phonograph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/music_pic_phonograph_ring_01"/>
</FrameLayout>




